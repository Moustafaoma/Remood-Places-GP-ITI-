@model Remood_Place.Models.PackageFavourit

@{
    ViewData["Title"] = "RemoveFavouritepac";
}

<h1>RemoveFavouritepac</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>PackageFavourit</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Package)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Package.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AppUser)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AppUser.Id)
        </dd>
    </dl>

    @using (Html.BeginForm("RemoveFavouritepackage", "Package", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <div class="modal-body" style="max-height: 400px; overflow-y: auto;">
            <div class="mb-3">
                <input type="number" hidden class="form-control" name="packageid" value="@ViewBag.id">
            </div>
        </div>
        <div class="modal-footer" style="justify-content: space-between;">
            <button type="submit" class="btn btn-primary submit m-0 p-0 dep rounded-pill" style="width: 100px; height: 50px;">
                <label class="mb-0 mx-auto ms-2">Remove</label>
                <i class="fa-solid fa-check"></i>
            </button>
            <button type="button" class="btn btn-danger bg-danger p-0 rounded-pill" style="width: 100px; height: 50px;" data-bs-toggle="modal" data-bs-target="#exampleModal">
                <label class="mb-0 mx-auto ms-2">Cansel</label>
                <i class="fa-solid fa-xmark "></i>
            </button>
        </div>
    }
</div>
