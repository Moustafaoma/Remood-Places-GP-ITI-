        document.addEventListener('DOMContentLoaded', function () {
            // Select the form more specifically if needed, or ensure this selector matches your form
            var form = document.querySelector('form');
            if (!form) {
                console.log('Form not found!');
                return;
            }

            form.addEventListener('submit', function (event) {
                // Prevent the default form submission behavior
                event.preventDefault();

                // Log to confirm the event handler is working
                console.log('Form submission intercepted');

                // Change the margin-top value of the container div
                var containerDiv = document.getElementById('container-div');
                if (containerDiv) {
                    containerDiv.style.marginTop = '15rem';
                    console.log('Margin changed to 15rem');
                } else {
                    console.log('Container div not found!');
                }

                // Optionally, submit the form programmatically
                this.submit();
            });
        });
    </script>




