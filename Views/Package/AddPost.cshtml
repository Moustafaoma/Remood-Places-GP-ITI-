<body class="packageBody">
    <div class="container-fluid py-5 mb-5 hero-header" style="min-height: calc(100vh - 70px); width: 100%; max-width: none; background-image: url(/detailsdescrapition/coverr.jpg); background-color: rgba(255, 255, 255, 0.8); background-size: cover; background-position: center;">
        <div class="container py-5">
            <div class="row g-5 align-items-center">
                <div class="col-md-12 mx-auto p-5" style="background-color: rgba(255, 255, 255, 0.5); border: 2px solid #ced4da; border-radius: 10px;">
                    <h2 class="mb-4" style="color: #495057;">@package.Name</h2>
                    <p class="mb-0" style="font-size: 1.3rem; color: #343a40; line-height: 1.6; word-wrap: break-word;">@package.Description</p>
                </div>
            </div>
        </div>
    </div>











    <div class="container mt-5" id="container-div ">


        <div class="container-fluid my-3 text-center" style="background-color: rgba(230, 230, 230, 0.8); border-radius: 8px; padding: 15px;">
            <h2 class="col-12" style="color: #333; font-size: 24px; font-weight: bold;">Make A Good Day</h2>
        </div>

        <div class="search my-3 row">
            <div class="col-12">
                <form action="/Package/Searchposts" method="get" class="input-group">
                    <input type="number" hidden name="id" class="form-control col-12" value="@package.ID">
                    <input type="search" name="query" class="form-control col-12" placeholder="Search..." aria-label="Search" value="@search">
                    <button class="btn btn-outline-primary" type="submit">Go</button>
                </form>
            </div>
        </div>

        @if (ViewBag.scusses != null)
        {
        <div class="alert alert-success" role="alert">
               @ViewBag.scusses
        </div>

        }


        <div class="container">
            <div class="row">
                @foreach (var item in posts)
                {
                    <div class="col-4">
                        <div class="card mt-4">
                            <!-- Image Carousel -->
                            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                                <ol class="carousel-indicators">
                                    @for (var i = 0; i < item.ImagePaths.Count; i++)
                                    {
                                        <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                                    }
                                </ol>
                                <div class="carousel-inner">
                                    @for (var i = 0; i < item.ImagePaths.Count; i++)
                                    {
                                        <div class="carousel-item @(i == 0 ? "active" : "")">
                                            <img src="@item.ImagePaths[i]" class="d-block w-100" style="height:300px;width:500px;" alt="Image @(i + 1)">
                                        </div>
                                    }
                                </div>
                            </div>

                            <!-- Card Body -->
                            <div class="card-body">
                                <h5 class="card-title d-flex justify-content-between">
                                    <div class="col-12"><h3>@item.Name</h3></div>
                                </h5>
                                <!-- Buttons -->
                                <div class="text-center mt-3">
                                    @using (Html.BeginForm("AddPost", "Package", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                    {
                                        <div class="modal-body" style="max-height: 400px; overflow-y: auto;">
                                            <div class="mb-3">
                                                <input type="number" hidden class="form-control" name="id" value="@ViewBag.id">
                                            </div>
                                            <div class="mb-3">
                                                <input type="number" hidden class="form-control" id="idpost" name="id_post" value="@item.Id">
                                            </div>
                                        </div>

                                        <button type="submit" class="btn btn-outline-primary submit m-0 p-0 dep rounded-pill" style="width: 100%; height: 50px;">
                                            <label class="mb-0 mx-auto ms-2">Add</label>
                                        </button>
                                    }
                                    <button type="button" style="width: 100%; height: 50px;" class="btn btn-secondary submit m-0 p-0 dep rounded-pill">
                                        <a style="text-decoration :none ; color :white" asp-controller="Posts" asp-action="Details" asp-route-id="@item.Id">See more</a>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <a asp-controller="Package" asp-action="Index">
        <button class="button_back" style="position:fixed !important; bottom:20px !important;right:20px !important;z-index:666 !important">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-bag-check svgIcon" viewBox="0 0 16 16">
