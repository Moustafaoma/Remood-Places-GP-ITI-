@model Remood_Place.Models.Package

@{
    ViewData["Title"] = "Editposts";
    Layout = "_headerfooter";
}
<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Index</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/detailsdescrapition/css/style.css" type="text/css">
    <!-- You may need to include Font Awesome if you're using its icons -->
    <style>
        .form-control.col-12.w-100 {
            width: 100%;
        }

        .button_back {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background-color: #cc7a00;
            border: none;
            font-weight: 600;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0px 0px 0px 4px rgba(180, 160, 255, 0.253);
            cursor: pointer;
            transition-duration: 0.3s;
            overflow: hidden;
        }

        .svgIcon {
            transition-duration: 0.3s;
        }

            .svgIcon path {
                fill: white;
            }

        .button_back:hover {
            width: 140px;
            border-radius: 50px;
            transition-duration: 0.3s;
            background-color: rgba(161, 149, 37, 0.712);
            align-items: center;
        }

            .button_back:hover .svgIcon {
                /* width: 20px; */
                transition-duration: 0.3s;
                transform: translateY(-200%);
            }

        .button_back::before {
            position: absolute;
            bottom: -20px;
            content: "Add Places";
            color: white;
            /* transition-duration: .3s; */
            font-size: 0px;
        }

        .button_back:hover::before {
            font-size: 13px;
            opacity: 1;
            bottom: unset;
            /* transform: translateY(-30px); */
            transition-duration: 0.3s;
        }

        * {
            font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
        }

        .description-box {
            border: 1px solid #ccc;
            padding: 10px;
            border-radius: 5px;
            background-color: #f9f9f9;
            word-wrap: break-word;
        }

        @@media (max-width: 990px) {
            #carouselContainer {
                margin-top: 400px !important;
            }
        }

        .header__menu {
            /* أي تعديلات أخرى تريدها هنا */
        }

        .navbar-nav {
            display: flex;
            flex-wrap: wrap; /* تمكين الانتقال للسطر التالي إذا كانت العناصر أكثر مما يمكنها أن تتناسب في السطر الحالي */
            justify-content: center; /* توسيط العناصر */
        }

        .nav-item {
            width: auto; /* حدد عرضًا تلقائيًا لكل عنصر */
            margin: 0 10px; /* هام: قم بتعيين هوامش للعناصر لتفادي التشابك بينها */
        }

        .nav-link {
            /* أي تعديلات أخرى تريدها هنا */
        }


        #btn_package {
            /*  padding: 0.8em 2.5em;  // Adjust padding to fit within the card */
            /*    font-size: 12px;
                                            text-transform: uppercase; */
            /* letter-spacing: 2.5px; */
            /*     font-weight: 500; */
            color: #000;
            background-color: #fff;
            border: none;
            border-radius: 45px;
            box-shadow: 0px 8px 15px rgba(0, 0, 0, 0.5);
            transition: all 0.3s ease 0s;
            cursor: pointer;
            outline: none;
        }

            #btn_package:hover {
                background-color: rgba(20, 62, 90, 0.4);
                box-shadow: 0px 15px 20px rgba(10, 49, 75, 0.4);
                color: #fff;
                transform: translateY(-3px); /* Adjust the transformation */
            }

            #btn_package:active {
                transform: translateY(-1px);
            }

        #card-data {
            box-shadow: 0px 20px 25px rgba(10, 49, 75, 0.445); /* ظل صندوقي من الجميع الجوانب */
        }

        .card:hover {
            box-shadow: 0px 0px 20px orange; /* زيادة حجم الظل عند التحويم */
            transform: scale(1.02); /* زيادة حجم الكارت عند التحويم بنسبة 10% */
        }

        .card {
            transition: box-shadow 1s ease 0s, transform 1s ease 0s; /* تأثير تدريجي على خاصيتي الظل والتحويل على مدى 2 ثانية */
        }
    </style>
    <!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"> -->
</head>
<body>
<div class="container-fluid row d-flex justify-content-center">
    @foreach (var post in Model.packagePosts)
    {
        <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
            <div class="card h-100" id="card-data" style="border-radius: 8px; border-left: 1px orange solid;border-right: 1px orange solid;border-top: 1px orange solid;">
                <img src="@post.Post.ImagePaths[0]" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@post.Post.Name</h5>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <form action="@Url.Action("Details", "Posts")" method="get">
                            <input type="hidden" name="id" value="@post.Post.Id" />
                            <button type="submit" class="btn btn-warning btn-block">
                                See More ...
                            </button>
                        </form>

                        <form asp-action="DeletePost" asp-controller="Package" method="post">
                            <input type="hidden" name="idpac" asp-for="@post.PackageId" />
                                <input type="hidden" name="idpost" asp-for="@post.Post.Id" />

                            <button type="submit" class="btn btn-danger btn-block">
                                Delete
                            </button>
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    }
</div>
<form asp-action="AddPost" asp-controller="Package" method="get">
    <input type="hidden" name="id" asp-for="@Model.ID" />

        <button class="button_back" type="submit" style="position:fixed !important; bottom:20px !important;right:20px !important;z-index:666 !important">
            <svg xmlns="http://www.w3.org/2000/svg" width="46" height="46" fill="currentColor" class="bi bi-plus svgIcon" viewBox="0 0 16 16">
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4" />
            </svg>
        </button>
</form>
    </body>
